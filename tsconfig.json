{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared-utils/*": ["packages/shared-utils/src/*"]
    },
    "lib": ["ES2020"]
  },
  "exclude": [
    "node_modules"
  ]
}